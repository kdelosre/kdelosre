<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Select a Meeting to View Dashboard"
        android:textColor="#797878"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView7" />

    <ListView
        android:id="@+id/meeting_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:layout_margin="20dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true">
    </ListView>

    <TextView
        android:text="Meetings"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Welcome, "
        android:gravity="center_horizontal"
        android:textColor="#b30000"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginRight="59dp"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="User Name"
        android:gravity="center_horizontal"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Create Meeting"
        android:gravity="center"
        android:layout_width="181dp"
        android:layout_height="47dp"
        android:id="@+id/createMeeting"
        android:onClick="onCreateMeetingClick"
        android:background="#901313"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:elevation="0dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true" />

</RelativeLayout>