<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="150"
    android:layout_margin="10dp">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Title"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textColor="#b30000"
            android:textSize="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:inputType="textPersonName"
            android:layout_height="40dp"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:background="#750606"
            android:paddingLeft="10dp"
            android:id="@+id/meetingTitle" />

        <TextView
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textColor="#b30000"
            android:textSize="20dp"
            android:paddingTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:background="#750606"
            android:paddingLeft="10dp"
            android:id="@+id/meetingDescription" />

        <TextView
            android:text="Date"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:id="@+id/testingDate"
            android:textColor="#b30000"
            android:textSize="20dp"
            android:paddingTop="10dp" />

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:onClick="onPickDateClick"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:background="#750606"
                android:paddingLeft="10dp"
                android:id="@+id/meetingDate" />

            <Button
                android:id="@+id/btn_date"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:onClick="onSetDate"
                android:background="#b30000"
                android:textColor="#FFFFFF"
                android:layout_gravity="right"
                android:text="Set Date"/>

        </LinearLayout>


        <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textColor="#b30000"
            android:textSize="20dp"
            android:paddingTop="10dp" />


        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_weight="0.5"
                android:textColor="#FFFFFF"
                android:background="#750606"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="left"
                android:id="@+id/meetingTime" />

            <Button
                android:id="@+id/btn_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:onClick="onSetTime"
                android:background="#b30000"
                android:textColor="#FFFFFF"
                android:layout_gravity="right"
                android:text="Set Time"/>

        </LinearLayout>


        <TextView
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textColor="#b30000"
            android:textSize="20dp"
            android:paddingTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:background="#750606"
            android:paddingLeft="10dp"
            android:id="@+id/meetingLocation" />

        <TextView
            android:text="Agenda Topics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textColor="#b30000"
            android:textSize="20dp"
            android:paddingTop="10dp" />

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:background="#750606"
                android:paddingLeft="10dp"
                android:id="@+id/meetingTopics" />

            <Button
                android:id="@+id/addTopic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:onClick="onAddTopicClick"
                android:layout_gravity="center"
                android:background="#b30000"
                android:textColor="#FFFFFF"
                android:text="+"
                android:textSize="20dp"/>

        </LinearLayout>

        <TextView
            android:text="Files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textColor="#b30000"
            android:textSize="20dp"
            android:paddingTop="10dp" />

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/uploadFile"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:onClick="onUploadFileClick"
                android:background="#b30000"
                android:textColor="#FFFFFF"
                android:text="Upload Files"/>

            <Button
                android:id="@+id/addFile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:onClick="onAddFileClick"
                android:layout_gravity="center"
                android:background="#b30000"
                android:textColor="#FFFFFF"
                android:text="+"
                android:textSize="20dp"/>


        </LinearLayout>

        <TextView
            android:text="Invite Members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textColor="#b30000"
            android:textSize="20dp"
            android:paddingTop="10dp" />

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:background="#750606"
                android:paddingLeft="10dp"
                android:id="@+id/meetingMembers" />

            <Button
                android:id="@+id/addMember"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:onClick="onAddMemberClick"
                android:background="#b30000"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:text="+"
                android:textSize="20dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/createDashboard"
            android:inputType="textPersonName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="onCreateDashboardClick"
            android:background="#b30000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="25dp"
            android:text="CREATE MEETING"/>


    </LinearLayout>


</ScrollView>
